---
import GenderToggle from '../components/GenderToggle.astro';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Я отменяю токсик</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="alternate icon" href="/favicon.ico">
  <meta name="cloudflare-analytics" content="token=__YOUR_TOKEN__">
</head>
<body class="bg-[#77FF00] h-screen flex items-center justify-center font-sans">
  <div class="text-center p-4 w-full max-w-sm mx-auto">

    <form id="main-form">
      <div class="w-full">
        <div class="text-left">
          <label for="name" class="inline-block text-lg font-semibold mb-2 text-black">Меня зовут:</label>
        </div>
        <div class="w-full">
          <input
            id="name"
            name="name"
            type="text"
            maxlength="20"
            pattern="[A-Za-zА-Яа-яЁё]{1,20}"
            placeholder="Введите имя"
            required
            class="w-full px-4 py-3 border-2 border-black rounded-full text-lg focus:outline-none focus:ring-2 focus:ring-gray-500"
          />
        </div>
        <div class="flex justify-center mt-5">
          <GenderToggle />
        </div>
      </div>

      <button
        id="go"
        type="submit"
        disabled
        class="w-full px-8 py-4 bg-black text-white font-bold rounded-full text-lg disabled:bg-gray-400 disabled:cursor-not-allowed hover:bg-gray-800 transition-colors mt-5"
      >
        Я отменяю токсик
      </button>
    </form>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.getElementById('main-form');
      const goButton = document.getElementById('go');
      const nameInput = document.getElementById('name');

      if (!form || !goButton || !nameInput) return;

      // Функция проверки валидности формы
      function checkFormValidity() {
        const isNameValid = nameInput.value.trim().length > 0 && /^[A-Za-zА-Яа-яЁё]{1,20}$/.test(nameInput.value);
        const isGenderSelected = window.getSelectedGender ? window.getSelectedGender() : '';

        goButton.disabled = !(isNameValid && isGenderSelected);
      }

      // Проверяем при вводе имени
      nameInput.addEventListener('input', checkFormValidity);

      // Обработка отправки формы
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        
        const name = nameInput.value.trim();
        const gender = window.getSelectedGender ? window.getSelectedGender() : '';

        if (name && gender && /^[A-Za-zА-Яа-яЁё]{1,20}$/.test(name)) {
          // Передаем данные через URL параметры
          const params = new URLSearchParams({
            name: name,
            gender: gender
          });
          
          // eslint-disable-next-line no-restricted-globals
          location.href = `/video?${params.toString()}`;
        }
      });
    });
  </script>
</body>
</html>
