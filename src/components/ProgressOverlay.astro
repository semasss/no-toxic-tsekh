---
// Компонент оверлея прогресса генерации видео
---

<div id="progress-overlay" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
  <div class="bg-white rounded-lg p-8 text-center">
    <div class="animate-spin rounded-full h-16 w-16 border-b-2 border-gray-900 mx-auto mb-4"></div>
    <p class="text-lg font-semibold">Генерируем видео...</p>
    <p id="progress-text" class="text-sm text-gray-600 mt-2">0%</p>
  </div>
</div>

<script>
  window.showProgress = () => {
    const overlay = document.getElementById('progress-overlay');
    if (overlay) {
      overlay.classList.remove('hidden');
    }
  };

  window.hideProgress = () => {
    const overlay = document.getElementById('progress-overlay');
    if (overlay) {
      overlay.classList.add('hidden');
    }
  };

  window.updateProgress = (percent, message) => {
    const progressText = document.getElementById('progress-text');
    if (progressText) {
      const text = message ? `${message} (${Math.round(percent)}%)` : `${Math.round(percent)}%`;
      progressText.textContent = text;
    }
  };
</script>
